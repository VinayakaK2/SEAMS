{
  "name": "seams",
  "version": "1.0.0",
  "description": "Student Engagement and Activity Management System",
  "scripts": {
    "start": "cd server && node index.js",
    "server": "cd server && node index.js",
    "client": "cd client && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd client && npm install && npm run build",
    "render-build": "npm install && npm run build && cd server && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.11"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^9.0.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.11",
    "qrcode": "^1.5.4",
    "socket.io": "^4.8.1"
  }
}