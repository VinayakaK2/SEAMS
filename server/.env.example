# Required Environment Variables

# MongoDB Connection
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/seams

# JWT Secret (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your-secret-key-here

# Email Configuration (SMTP)
# For Gmail: Use smtp.gmail.com with App Password (not regular password)
# For other providers: Check their SMTP settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email Display Info
FROM_NAME=SEAMS Support
FROM_EMAIL=noreply@seams.com

# Node Environment
NODE_ENV=development

# Port (auto-set by Render, use 5000 for local)
PORT=5000
